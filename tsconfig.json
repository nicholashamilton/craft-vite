{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": false,
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "Node",
        // "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        // "noImplicitReturns": true,
        "types": [
            "vite/client",
        ],
        "experimentalDecorators": true,
    },
    "include": [
        "./src/**/*",
        "./templates/**/*"
    ]
}